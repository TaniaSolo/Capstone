<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="description" content="">
    <meta name="author" content="">
    <title>Edit Profile</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/1-col-portfolio.css" rel="stylesheet">

    <!-- Temporary fix for navbar responsiveness -->
    <style>
    .navbar-toggler {
        z-index: 1;
    }
    .buttonStyle{
    margin:10px}
    @media (max-width: 576px) {
        nav > .container {
            width: 100%;
        }
    }
    </style>
<!-- jQuery Version 3.1.1 -->
    <script src="js/jquery.js"></script>

    <!-- Tether -->
    <script src="js/tether.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
</head>

<body>
    <!-- Page Content -->
    <div class="container">

    <h1>Edit Profile</h1>
	<!-- Edit Profile FORM -->
	<form action="/edit_profile" method="post">

		<div class="form-group">
			<label>First Name</label>
			<input type="text" class="form-control" name="firstName" value =<%= user.first %>>
		</div>

		<div class="form-group">
			<label>Last Name</label>
			<input type="text" class="form-control" name="lastName" value =<%= user.last %>>
		</div>
		<div class="form-group">
			<label>Email Address</label>
			<input type="text" class="form-control" name="email">
		</div>
		 <td><label for="preferences">News Preferences:</label></td>
                             <td>
							 <br /> 
                            <%if(user.preferences.faith) {%>
  							 <input type="checkbox" name="faith" checked="true"> Faith<br>
                 <%} else{%>
                  <input type="checkbox" name="faith" unchecked="true"> Faith<br>
                 <% } %>

                       <%if(user.preferences.politics) {%>
                 <input type="checkbox" name="politics" checked="true"> Politics<br>
                 <%} else{%>
                  <input type="checkbox" name="politics" unchecked="true"> Politics<br>
                 <% } %>


  							  <%if(user.preferences.opinion) {%>
                 <input type="checkbox" name="opinion" checked="true"> Opinion<br>
                 <%} else{%>
                  <input type="checkbox" name="opinion" unchecked="true"> Opinion<br>
                 <% } %>

  							

                  <%if(user.preferences.health) {%>
                 <input type="checkbox" name="health" checked="true"> Health<br>
                 <%} else{%>
                  <input type="checkbox" name="health" unchecked="true"> Health<br>
                 <% } %>



                  <%if(user.preferences.entertainment) {%>
                 <input type="checkbox" name="entertainment" checked="true"> Entertainment<br>
                 <%} else{%>
                  <input type="checkbox" name="entertainment" unchecked="true"> Entertainment<br>
                 <% } %>

                 <%if(user.preferences.travel) {%>
                 <input type="checkbox" name="travel" checked="true"> Travel<br>
                 <%} else{%>
                  <input type="checkbox" name="travel" unchecked="true"> Travel<br>
                 <% } %>
  			
  							
							    <br /> 
                            </td>
                      	</tr>

		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>
		
		<button type="save" class="btn btn-warning btn-lg">Save</button>
        <input type="reset" name="ResetButton" id="ResetButton" value="Reset" class="buttonStyle" tabindex="6">
	</form>
    </div>
    <br>
    <!-- Footer -->
    <footer class="py-5 bg-inverse">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
        </div>
        <!-- /.container -->
    </footer>
</body>
</html>